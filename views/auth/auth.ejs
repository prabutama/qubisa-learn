<%- layout('layouts/app') %>

<section class="lg:px-2">
    <div class="container mx-auto py-5 lg:py-10">
        <div class="lg:flex justify-center gap-10 mx-auto py-10 lg:py-24 bg-gray-300 lg:rounded-md">
            <div id="signin" class="w-[95%] lg:w-[40%] mx-auto bg-white lg:rounded-r-2xl element rounded-md">
